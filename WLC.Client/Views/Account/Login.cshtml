@model WLC.Client.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<div class="panel">
    <div class="panel-body">

        @using (Html.BeginForm("Login", "Account", new { ReturnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post, new { @id = "formLogOn" }))
        {
            <div class="form-group">
                <label>User Name:</label>
                @Html.TextBoxFor(m => m.KullaniciAdi, new { @class = "form-control", @placeholder = "User name" })
                <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
            </div>
            <div class="form-group">
                <label>Password:</label>
                @Html.PasswordFor(m => m.Sifre, new { @class = "form-control", @placeholder = "Password", @type = "password" })
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
            <input type="submit" value="Login" class="btn btn-primary" />

            <span style="color:red">@Html.ValidationSummary()</span>
        }
    </div>
</div>
